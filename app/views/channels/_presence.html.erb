<% # locals: (channel:, user: current_user) %>
<turbo-presence-source class="channel-presence" signed-stream-name="<%= signed_stream_name([channel, :presence]) %>" ignore-id="<%= dom_id(user, :presence) %>">
  <div class="relative font-normal mr-2 flex flex-row items-center space-x-1 group cursor-pointer">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-600 channel-presence--icon">
      <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
    </svg>
    <turbo-presence-counter class="text-sm ml-1">0</turbo-presence-counter>
    <div class="absolute left-full ml-2 top-1/2 bg-gray-50 rounded-md p-2 invisible group-hover:visible shadow-lg transition-shadow channel-presence--list">
      <div class="text-sm flex flex-col space-y-1 px-2" id="<%= dom_id(channel, :presence) %>">
      </div>
    </div>
  </div>
  <template presence-id="<%= dom_id(user, :presence) %>">
    <%= turbo_stream.append dom_id(channel, :presence) do %>
      <div id="<%= dom_id(user, :presence) %>" class="u-<%=user.color %>">@<%= user.username %></div>
    <% end %>
  </template>
</turbo-presence-source>
