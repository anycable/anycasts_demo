<turbo-frame id="<%= dom_id(channel, :chat) if channel %>" class="flex flex-col justify-end min-h-full">
  <div id="messages"
       class="flex-col flex overflow-y-scroll
              mr-4 flex-grow <%= current_channel ? "justify-end" : "justify-center" %>">
    <%- if current_channel -%>
      <%- messages = current_channel.messages.preload(:user).order(id: :desc).limit(20).reverse.to_a -%>
      <%= turbo_stream_from channel, channel: "ChatChannel", history_selector: "#messages .message:last-child", data: {channel_id: current_channel.id, last_message_id: messages.last.id} %>
      <%= render messages %>
    <%- else -%>
      <div class="text-center text-gray-500">No channel selected</div>
    <%- end -%>
  </div>
  <%= render "messages/form", channel: current_channel if current_channel %>
</turbo-frame>
