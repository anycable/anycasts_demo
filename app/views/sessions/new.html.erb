<div class="min-h-screen flex items-center justify-center px-4 flex-col">
  <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-xl shadow-lg">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-2">Please, pick a user!</h2>
    </div>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
      <% User.all.without(User.first).each do |user| %>
        <%= form_tag login_path, method: :post, data: {turbo: "false"} do %>
          <%= hidden_field_tag :username, user.username, id: nil %>
          <%= hidden_field_tag :password, "qwerty", id: nil %>
          <button type="submit" class="user-button u-<%= user.color %> border-2 py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105">
            <%= user.username %>
          </button>
        <% end %>
      <% end %>
    </div>
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300"></div>
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-white text-gray-500">Or log in using credentials</span>
      </div>
    </div>
    <%= form_tag login_path, method: :post, data: {turbo: "false"}, class: "mt-8 space-y-6" do %>
      <div class="space-y-4">
        <div>
          <label for="username" class="sr-only">Username</label>
          <%= text_field_tag :username, params[:username], placeholder: "Username", class: "appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <%= password_field_tag :password, params[:password], placeholder: "Password", class: "ppearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" %>
        </div>
      </div>
      <%= button_tag "Log in", type: "submit", class: "roup relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-200" %>
    <% end %>
  </div>
</div>
